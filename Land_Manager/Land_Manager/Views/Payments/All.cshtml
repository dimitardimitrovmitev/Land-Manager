@model Land_Manager.Models.PaymentsModels.PaymentListModel

@{
    ViewData["Title"] = "Payments";
}
<div class="mb-3">
    <h3>All Payments</h3>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">From</th>
            <th scope="col">Amount in €</th>
            <th scope="col">Payment Date</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var payment in Model.Payments)
        {
            <tr>
                <td><a asp-controller="Payments" asp-action="Customer" asp-route-id="@payment.CustomerId">@payment.CustomerName</a></td>
                <td>@payment.Cost</td>
                <td>@payment.Date</td>
            </tr>
        }
    </tbody>
</table>
