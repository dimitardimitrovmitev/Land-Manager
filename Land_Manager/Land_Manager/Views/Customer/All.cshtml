@model Land_Manager.Models.CustomerModels.CustomerListModel

@{
    ViewData["Title"] = "Customers";
}
<div class="mb-2">
    <h3>All Customers</h3>
</div>
<div class="mb-3">
    <a asp-controller="Customer" asp-action="Add" class="btn btn-success btn-sm">Add Customer</a>
</div>
<table class="table">
    <thead>
        <tr>
            <th scope="col">Name</th>
            <th scope="col">Address</th>
            <th scope="col">Email</th>
            <th scope="col">Phone</th>
            <th scope="col">Date Of Renting</th>
            <th scope="col">Debt</th>
        </tr> 
    </thead>
    <tbody>
        @foreach (var customer in Model.Customers)
        {
            <tr>
                <td><a asp-controller="Customer" asp-action="Index" asp-route-id="@customer.Id" class="customer-name">@customer.FullName</a></td>
                <td>@customer.Address</td>
                <td>@customer.Email</td>
                <td>@customer.PhoneNumber</td>
                <td>@customer.DateOfRenting</td>
                <td><b>€@customer.Debt</b></td>
            </tr>
        }
    </tbody>
</table>
