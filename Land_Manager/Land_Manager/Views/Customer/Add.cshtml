@model Land_Manager.Models.CustomerModels.AddCustomerModel

@{
    ViewData["Title"] = "Add Customer";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="centered-form">
        <div class="mb-3 ml-3">
            <h2>Add Customer</h2>
        </div>
        <div class="form-row">
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Customer.FirstName, new { @class = "control-label col-6" })
                <div class="col-12">
                    @Html.EditorFor(m => m.Customer.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Customer.FirstName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group col-sm-6">
                @Html.LabelFor(model => model.Customer.LastName, new { @class = "control-label col-6" })
                <div class="col-12">
                    @Html.EditorFor(m => m.Customer.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Customer.LastName, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Customer.Email, new { @class = "control-label col-6" })
            <div class="col-12">
                @Html.EditorFor(m => m.Customer.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Customer.Email, "", new { @class = "text-danger" })
            </div>
         </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Customer.PhoneNumber, new { @class = "control-label col-6" })
            <div class="col-12">
                @Html.EditorFor(m => m.Customer.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Customer.PhoneNumber, "", new { @class = "text-danger" })
            </div>
         </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Customer.DateOfRenting, new { @class = "control-label col-6" })
            <div class="col-12">
                @Html.EditorFor(m => m.Customer.DateOfRenting, new { htmlAttributes = new { @class = "form-control", @type = "date" } })
                @Html.ValidationMessageFor(model => model.Customer.DateOfRenting, "", new { @class = "text-danger" })
            </div>
         </div>
        <div class="form-group">
            @Html.LabelFor(model => model.Customer.RentedLand, new { @class = "control-label col-6" })
            <div class="col-12">
                @Html.DropDownListFor(model => model.RentedLandId, new SelectList(Model.Lands.Select(m => m), "Id", "Address"), "Select Land", new { @class = "form-control" })
            </div>
        </div>
        <div class="form-group centered-button">
            <div class="col-offset-2 col-3">
                <button type="submit" class="btn btn-success btn-block">Add</button>
            </div>
        </div>
    </div>
}
