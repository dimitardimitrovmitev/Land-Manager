@model Land_Manager.Models.LandModels.LandListModel

@{
    ViewData["Title"] = "Land";
}

<div class="mb-3">
    <a asp-controller="Land" asp-action="Add" class="btn btn-success btn-sm">Add Land</a>
</div>
<div>
    <div class="row">
        @foreach (var property in Model.Lands)
        {
            <div class="col-xl-3 col-lg-6 col-sm-12">
                <a asp-controller="Land" asp-action="Index" asp-route-id="@property.Id">
                    <div class="menu-item property-list-item">
                        <div class="row">
                            <div class="item-title col">
                                @property.Address <br />
                                <p class="secondary-text">@property.NumberOfCustomers Customers</p>
                            </div>
                        </div>
                    </div>
                </a>
            </div>
        }
        @if (Model.Lands.Count() == 0)
        {
            <h3 class="mt-2 ml-2">You don't have any lands yet.</h3>
        }
    </div>
</div>