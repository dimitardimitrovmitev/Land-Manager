@model Land_Manager.Models.LandModels.LandIndexModel

@{
    ViewData["Title"] = Model.Address;
}

<div class="mb-3">
    <h2>@Model.Address</h2>
</div>
<div class="mb-3 property-info">
    <div>Area: <b>@Model.Area &#13217;</b></div>
    <div>Monthy Rent: <b>€@Model.Rent</b></div>
</div>
<div class="mb-4">
    <a asp-controller="Land" asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-success btn-sm">Edit Land</a>
</div>
<h4 class="home-payments-title mb-2">Customers</h4>
<div class="row">
    <table class="table col-8">
        <thead>
            <tr>
                <th scope="col">Name</th>
                <th scope="col">Email</th>
                <th scope="col">Date Of Moving In</th>
                <th scope="col">Debt</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var customer in Model.Customers)
            {
                <tr>
                    <td><a asp-controller="Customers" asp-action="Index" asp-route-id="@customer.Id" class="customer-name">@customer.FullName</a></td>
                    <td>@customer.Email</td>
                    <td>@customer.DateOfRenting</td>
                    <td><b>€@customer.Debt</b></td>
                </tr>
            }
        </tbody>
    </table>
</div>